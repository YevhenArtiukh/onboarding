{%  extends 'base.html.twig' %}

{% block title %}Zaliczanie obecności za trenera{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/libs/select2/dist/css/select2.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/libs/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css') }}">
    {% if onboardingTrainings %}
        <link href="{{ asset('assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css') }}" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="row page-titles">
            <div class="col-12 align-self-center">
                <h3 class="text-themecolor mb-0">Zaliczanie obecności za trenera</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-8 offset-lg-2">
                    <div class="card">
                        <div class="card-header bg-info text-white text-center">
                            Dane szkolenia
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        {{ form_row(form.training) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_row(form.coach) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_row(form.date) }}
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="form-actions">
                                <div class="text-right">
                                    <button type="submit" class="btn btn-info">Wyszukaj</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                {% if onboardingTrainings %}
                    <div class="col-12 col-lg-8 offset-lg-2">
                        <div class="card">
                            <div class="card-header bg-info text-white text-center">
                                Wybierz szkolenie
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered">
                                        <thead>
                                        <tr>
                                            <th>Nazwa szkolenia</th>
                                            <th>Trenerzy</th>
                                            <th>Data szkolenia</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for onboardingTraining in onboardingTrainings %}
                                            <tr>
                                                <td>
                                                    <a href="{{ path('participants_onboarding_training', {onboardingTraining: onboardingTraining.id}) }}">{{ onboardingTraining.name }}</a>
                                                </td>
                                                <td>{{ onboardingTraining.coaches }}</td>
                                                <td>{{ onboardingTraining.day|date('d.m.Y') }}</td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        {{ parent() }}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/libs/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('assets/libs/select2/dist/js/select2.min.js') }}"></script>
    <script src="{{ asset('assets/libs/moment/min/moment-with-locales.min.js') }}"></script>
    <script src="{{ asset('assets/libs/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker-custom.js') }}"></script>
    {% if onboardingTrainings %}
        <script src="{{ asset('assets/libs/datatables/media/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('assets/js/pages/datatable/custom-datatable.js') }}"></script>
    {% endif %}
    <script>
        $(".select2").select2({
            dropdownAutoWidth : true,
            width: '100%'
        });

        $('#coaching_search_date').bootstrapMaterialDatePicker({
            weekStart: 0,
            time: false,
            clearButton: true,
            format: 'DD.MM.YYYY'
        });
        {% if onboardingTrainings %}
            $('#zero_config').DataTable({
                language: {
                    emptyTable: "Brak wyników",
                    infoEmpty: "Brak wyników",
                    zeroRecords: "Brak wyników",
                    lengthMenu: "_MENU_",
                    search: "  ",
                    sSearchPlaceholder: "Wyszukaj...",
                    info: "Wyświetlanych jest _START_ do _END_ z _TOTAL_ wyników", sInfoFiltered:"(wyfiltrowane z _MAX_ wszystkich wpisów)",
                    paginate: {
                        "next": " >",
                        "previous": "< "
                    }
                },
                "order": [[ 2, "asc" ]],
                "columnDefs" : [{"targets":2, "type":"date-eu"}],
            });
        {% endif %}
    </script>
{% endblock %}