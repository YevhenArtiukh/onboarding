{% extends 'base.html.twig' %}

{% block title %}Zresetuj hasło{% endblock %}

{% block topbar %}{% endblock %}

{% block sidebar %}{% endblock %}

{% block body %}
    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url({{ asset('assets/images/background/login-register.jpg') }}) no-repeat center center; background-size: cover;">
        <div class="auth-box p-4 bg-white rounded">
            <div>
                <div class="logo">
                    <h3 class="box-title mb-3">Resetowanie hasła</h3>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_start(form) }}
                            <div class="form-group row mb-3">
                                {{ form_row(form.email) }}
                            </div>

                            <div class="form-group text-center">
                                <div class="col-xs-12">
                                    <button class="btn btn-block btn-lg btn-info" type="submit">Wyślij</button>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <div class="col-sm-12 justify-content-center d-flex mt-3">
                                    <p><a href="{{ path('login') }}" class="text-muted"> Zaloguj się </a></p>
                                </div>
                            </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(".preloader").fadeOut();
    </script>
{% endblock %}