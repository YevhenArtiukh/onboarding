{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block topbar %}{% endblock %}

{% block sidebar %}{% endblock %}

{% block body %}
    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url({{ asset('assets/images/background/login-register.jpg') }}) no-repeat center center; background-size: cover;">
        <div class="auth-box p-4 bg-white rounded">
            <div id="loginform">
                <div class="logo">
                    <h3 class="box-title mb-3">Logowanie</h3>
                </div>
                <div class="row">
                    <div class="col-12">
                        <form class="form-horizontal mt-3 form-material" id="loginform" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="form-group mb-3">
                                <div class="">
                                    <input class="form-control" type="text" name="login" id="inputLogin" value="{{ last_username }}" placeholder="Login" required autofocus>
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <div class="">
                                    <input class="form-control" type="password" name="password" id="inputPassword" placeholder="Hasło" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="d-flex">
                                    <div class="checkbox checkbox-info pt-0">
                                        <input id="remember_me" type="checkbox" name="_remember_me" class="material-inputs chk-col-indigo">
                                        <label for="remember_me"> Zapamiętaj mnie </label>
                                    </div>
                                    <div class="ml-auto">
                                        <a href="{{ path('password_reset') }}" id="to-recover" class="text-muted float-right"><i class="fa fa-lock mr-1"></i> Zapomniałeś hasła? </a>
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group text-center mt-4">
                                <div class="col-xs-12">
                                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Zaloguj się</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(".preloader").fadeOut();
    </script>
{% endblock %}