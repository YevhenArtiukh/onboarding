{% extends 'base.html.twig' %}

{% block title %}Szczegóły szkolenia {{ app.request.get('onboardingTraining').training.name }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="row page-titles">
            <div class="col-12 align-self-center">
                <h3 class="text-themecolor mb-0">Szczegóły szkolenia</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="offset-sm-2 offset-xl-3 col-12 col-sm-8 col-xl-6">
                    <div class="card">
                        <div class="card-header bg-info text-center">
                            <h4 class="card-title text-white">
                                {{ app.request.get('onboardingTraining').training.name }}
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-lg-6">
                                    <div class="img-wrapper">
                                        {% if app.request.get('onboardingTraining').training.image %}
                                            <img id="photo"
                                                 src="{{ asset('uploaded/training/'~app.request.get('onboardingTraining').training.image) }}"
                                                 alt="photo">
                                        {% else %}
                                            <img id="photo" src="{{ asset('assets/images/backphoto.png') }}"
                                                 alt="photo">
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="mt-3 mt-lg-0 col-12 col-lg-6">
                                    <h5>Informacja o szkoleniu:</h5>
                                    <p>{{ app.request.get('onboardingTraining').training.description }}</p>
                                </div>
                            </div>

                            <div class="table-responsive mt-5">
                                <table id="training_attachment" class="table ">
                                    <thead class="bg-info text-white">
                                    <tr role="row">
                                        <th colspan="2">Materiały szkoleniowe</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for tA in app.request.get('onboardingTraining').training.trainingAttachments %}
                                        <tr>
                                            <td>{{ tA.defaultName }}</td>
                                            <td class="text-right">
                                                <a href="{{ asset('uploaded/trainingAttachment/'~tA.name) }}" download>
                                                    <i class="ti-download"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                            {% if app.user in app.request.get('onboardingTraining').users %}
                                <div class="row">
                                    <div class="col-12 text-right">

                                        {% if app.request.get('onboardingTraining').isTypeTest %}
                                            {% for exam in app.request.get('onboardingTraining').training.exams %}
                                                {% if exam.isActive and exam.isTest %}
                                                    {% set complete = false %}
                                                    {% for result in app.request.get('onboardingTraining').userResults %}
                                                        {% if result.user == app.user and result.score == 100 %}
                                                            {% set complete = true %}
                                                            <h4 class="text-success"><i class="ti-check-box"></i>
                                                                Szkolenie zaliczone</h4>
                                                        {% endif %}
                                                    {% endfor %}

                                                    {% if not complete %}
                                                        <a href="{{ path('exam_write', {onboardingTraining: app.request.get('onboardingTraining').id,exam: exam.id}) }}"
                                                           class="btn waves-effect waves-light btn-info">Wypełnij
                                                            test</a>
                                                    {% endif %}
                                                {% elseif exam.isActive and not exam.isTest %}

                                                    {% set complete = false %}
                                                    {% for result in app.request.get('onboardingTraining').userResults %}
                                                        {% if result.user == app.user and result.score == 100 %}
                                                            {% set complete = true %}
                                                            <h4 class="text-success"><i class="ti-check-box"></i>
                                                                Ankieta wypełniona</h4>
                                                        {% endif %}
                                                    {% endfor %}
                                                    {% if not complete %}
                                                        <a href="{{ path('questionnaire', {onboardingTraining: app.request.get('onboardingTraining').id,exam: exam.id}) }}"
                                                           class="btn waves-effect waves-light btn-info">Wypełnij
                                                            ankietę</a>
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            {% set completeUser = false %}
                                            {% set completeCoach = false %}
                                            {% for presenceParticipant in app.request.get('onboardingTraining').presenceParticipants %}
                                                {% if presenceParticipant.user == app.user %}
                                                    {% if presenceParticipant.getUserConfirmation %}
                                                        {% set completeUser = true %}
                                                    {% endif %}
                                                    {% if presenceParticipant.getCoachConfirmation %}
                                                        {% set completeCoach = true %}
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}

                                            {% if not completeUser %}
                                                <a href="#"
                                                   class="btn waves-effect waves-light btn-info confirm-participation">Potwierdź
                                                    udział</a>
                                            {% elseif completeUser and not completeCoach %}
                                                <h4 class="text-info"><i class="ti-info-alt"></i>
                                                    Udział potwierdzony</h4>
                                            {% elseif completeUser and completeCoach %}
                                                <h4 class="text-success"><i class="ti-check-box"></i>
                                                    Szkolenie zaliczone</h4>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                            {% if app.user in app.request.get('onboardingTraining').coaches %}
                                <div class="row">
                                    <div class="col-12 text-right">
                                        <a href="{{ path('participants_onboarding_training', {onboardingTraining: app.request.get('onboardingTraining').id}) }}" class="btn btn-info">Lista uczestników</a>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ parent() }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if app.user in app.request.get('onboardingTraining').coaches and app.request.get('onboardingTraining').isTypeTest %}
        <script src="{{ asset('assets/libs/datatables/media/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('assets/js/pages/datatable/custom-datatable.js') }}"></script>
        <script src="{{ asset('assets/js/pages/datatable/datatable-basic.init.js') }}"></script>
    {% endif %}

    <script>
        $('.confirm-participation').on('click', function () {
            Swal.fire({
                title: "Potwierdzenie udziału",
                text: "{{ app.request.get('onboardingTraining').training.workerInfo }}",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Nie potwierdzam',
                confirmButtonText: 'Tak, potwierdzam'
            }).then((result) => {
                if (result.value) {
                    fetch("{{ path('user_confirmation', {onboardingTraining: app.request.get('onboardingTraining').id}) }}", {
                        method: 'post',
                    }).then((result) => {
                        window.location.reload();
                    })
                }
            });
            return false;
        });
    </script>
{% endblock %}
