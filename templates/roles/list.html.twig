{%  extends 'base.html.twig' %}

{% block title %}Lista ról{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="row page-titles">
            <div class="col-md-5 col-12 align-self-center">
                <h3 class="text-themecolor mb-0">Lista ról</h3>
            </div>
            {% if is_granted('role_add') %}
                <div class="col-md-7 col-12 align-self-center d-none d-md-block">
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('role_add') }}" class="btn waves-effect waves-light btn-info">Dodaj nową rolę</a>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>Nazwa roli</th>
                                        {% if is_granted('role_edit') %}
                                            <th></th>
                                        {% endif %}
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for role in roles %}
                                        <tr>
                                            <td>{{ role.id }}</td>
                                            <td>{{ role.name }}</td>
                                            {% if is_granted('role_edit') %}
                                                <td>
                                                    <a href="{{ path('role_edit', {role:role.id}) }}" data-toggle="tooltip" data-placement="top" title="Zmień">
                                                        <i class="ti-pencil-alt"></i>
                                                    </a>
                                                </td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ parent() }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/libs/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/js/pages/datatable/custom-datatable.js') }}"></script>
    <script src="{{ asset('assets/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}