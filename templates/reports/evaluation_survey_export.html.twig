{% extends 'base.html.twig' %}

{% block title %}Raport z ankiet ewaluacyjnych{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/libs/c3/c3.min.css') }}">
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="row page-titles">
            <div class="col-12 align-self-center">
                <h3 class="text-themecolor mb-0">Raport z ankiet ewaluacyjnych</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-8 offset-lg-2">
                    <div class="card">
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12 col-md-4">
                                        {{ form_row(form.dateStart) }}
                                    </div>
                                    <div class="col-12 col-md-4">
                                        {{ form_row(form.dateEnd) }}
                                    </div>
                                    <div class="col-12 col-md-4 text-right text-md-center">
                                        <button type="submit" class="btn btn-info">Pobierz raport</button>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ parent() }}
    </div>
{% endblock %}